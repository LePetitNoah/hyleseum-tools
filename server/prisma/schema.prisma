generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String
  createdAt     DateTime  @default(now())
  
  // Relations
  projects      TrelloProject[]
  boards        MilanoteBoard[]
  notes         ObsidianNote[]
  folders       ObsidianFolder[]
  tools         Tool[]
}

model TrelloProject {
  id        String   @id @default(uuid())
  name      String
  tasks     Json     @default("[]") // Array of tasks
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MilanoteBoard {
  id          String   @id @default(uuid())
  title       String
  elements    Json     @default("[]") // Array of elements (notes, images, boards, etc.)
  connections Json     @default("[]") // Array of connections
  parentId    String?  // For nested boards
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ObsidianNote {
  id           String   @id @default(uuid())
  title        String
  content      String   @db.Text
  folderId     String?
  lastModified String   // ISO Date string from frontend
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ObsidianFolder {
  id        String   @id @default(uuid())
  name      String
  isOpen    Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tool {
  id          String   @id @default(uuid())
  title       String
  link        String?
  description String?
  comment     String?
  tags        Json     @default("[]")
  isFavorite  Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
